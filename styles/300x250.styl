.app__item {
	position: relative;
	width: 260px;
	height: 170px;
	margin: 0 auto 15px auto;
	&:after {
		position: absolute; bottom: 0;
		content: ""; width: 100%;
		display: block; height: 1px;
		background: #808080;
		}
	}
	
.app__item:last-child {
	margin-bottom: 0;
	}

.headline {
	height: 42px;
	text-align: center;
	font-size: 1.6em;
	color: #898989;
	span {
		display block;
		va();
		}
	}
	
.image-container {
	top: 0; left: 0;
	width: 100px; height: 100px;
	img {
		box-shadow: 0 2px 1px rgba(0,0,0,0.2);
		border-radius: 5px;
		}
	}
	
.rating {
	top: 119px; left: 0;
	width: 74px;
	}
	
.os-logo {
	top: 137px; left: 0;
	width: 87px;
	}
	
.app-texts {
	top: 0; left: 120px;
	.title {
		font-size: 1.8em;
		font-weight: bold;
		margin-bottom: 0.5em;
		color: #000;
		}
	.description {
		color: #898989;
		font-size: 1em;
		line-height: 1.3;
		}
	}
	
.button {
	top: 119px; left: 120px;
	width: 127px; height: 35px;
	font-size: 1.6em;
	span {
		display: block;
		va();
		}
	}
	
.powered_by {
	position: relative;
	width: 175px; height: 37px;
	margin: 0 auto;
	a {
		display: block;
		height: 100%;
		}
	._X-line-1 {
		va();
		display: block;
		}
	}