.app__items {
	height: 100%;
	margin-left: -20px;
	float: right;
	}
	
	.app__item {
		width: 222px; height: 58px;
		float: left;
		}


	.app__item:before {
		content: ""; height: 90%; va();
		display: block; width: 1px;
		background: #808080;
		}		

.headline {
	display: none;
	}

.powered_by {
	float: left;
	position: relative; top: auto; left: auto; right: auto;
	width: 20px; height: 90%; padding-left: 5px;
	va();
	._Y-smallest {
		display: none;
		}
	._Y-line-1 {
		display: block;
		width: auto;
		height: 100%;
		}
	}
	
	.image-container {
		top: 4px; left: 6px; right: auto; margin: 0;
		width: 50px; height: 50px;
		img {
			box-shadow: 0 2px 1px rgba(0,0,0,0.2);
			border-radius: 5px;
			}
		}
		
	.rating {
		top: 23px; left: 65px; right: 0; margin: 0;
		width: 61px;
		}
		
	.app-texts {
		top: 5px; left: 65px; right: auto;
		.title {
			font-size: 1.4em; line-height: 1;
			display: block;
			font-weight: bold;
			width: 90px; height: 15px;
			overflow: hidden;
			}
		.description {
				display: none;
			}
		}
		
	.os-logo {
		top: 39px; left: 65px; margin: 0;
		width: 60px;
		}
		
	.button {
		top: 8px; right: 6px; left: auto; margin: 0;
		width: 59px; height: 42px;
		font-size: 1.4em; line-height: 1.3;
		span {
			display: block;
			va();
			}
		}
		
